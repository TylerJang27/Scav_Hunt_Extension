{
    "name": "Scavenger Hunt",
    "description": "A simple scavenger hunt extension based on URLs",
    "version": "0.9.1",
    "manifest_version": 2,
    "options_ui": {
      "page": "options.html",
      "open_in_tab": false
    },
    "icons": { 
      "16": "graphics/scav16.png",
      "48": "graphics/scav48.png",
     "128": "graphics/scav128.png" 
    },
    "minimum_chrome_version": "46",
    "content_scripts": [
      {
        "matches": ["http://*/*"],
        "js": ["content.js"]
      },
      {
        "matches": ["https://*/*"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_title": "Scavenger Hunt",
      "default_icon": "graphics/scav.png"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "permissions": ["tabs", "storage", "downloads"],
    "web_accessible_resources": [
        "res/*"
    ]
  }