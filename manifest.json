{
    "name": "Scavenger Hunt",
    "version": "0.9",
    "manifest_version": 2,
    "options_ui": {
      "page": "options.html",
      "open_in_tab": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_title": "Scavenger Hunt"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "permissions": ["tabs", "storage"],
    "web_accessible_resources": [
        "res/*"
    ]
  }