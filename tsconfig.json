{
  "compilerOptions": {
    // TODO: TYLER MIGRATE ALL JAVASCRIPT INTO TYPESCRIPT, REMOVE JSX
    "jsx": "react",
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist/js",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*", "./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode"]
}
